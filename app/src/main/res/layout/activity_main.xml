<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mint"
    tools:context="com.example.the.gugudan.MainActivity">

   <FrameLayout
       android:padding="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:id="@+id/allViewBtn"
           android:layout_gravity="left"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@mipmap/ic_launcher_round"/>
       <ImageView
           android:id="@+id/homeBtn"
           android:layout_gravity="center"
           android:layout_width="100dp"
           android:layout_height="40dp"
           android:src="@mipmap/ic_launcher_round"/>
       <ImageView
           android:layout_gravity="right"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@mipmap/ic_launcher_round"/>
   </FrameLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/galleryBtn"
            android:tag="0"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="갤러리"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/videoBtn"
            android:tag="1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="동영상"/>
        <TextView
            android:id="@+id/scheduleBtn"
            android:tag="2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="스케줄"/>
        <TextView
            android:id="@+id/eventBtn"
            android:tag="3"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이벤트"/>
        <TextView
            android:id="@+id/qaBtn"
            android:tag="4"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Q\u0026A"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/galleryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/GalleryFrag"
                class="com.example.the.gugudan.Fragment.GalleryFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_gallery"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/VideoLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/VideoFrag"
                class="com.example.the.gugudan.Fragment.VideoFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_video"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/scheduleLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/ScheduleFrag"
                class="com.example.the.gugudan.Fragment.ScheduleFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_scheduel"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/EventLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/EventFrag"
                class="com.example.the.gugudan.Fragment.EventFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_event"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qaFragLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/QAFrag"
                class="com.example.the.gugudan.Fragment.QAFrag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/frag_qa"/>
        </LinearLayout>
    </FrameLayout>





</LinearLayout>
