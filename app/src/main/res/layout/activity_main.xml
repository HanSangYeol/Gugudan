<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mint"
    tools:context="com.sy_studio.the.gugudan_SangYeol.MainActivity">



    <android.support.v4.widget.DrawerLayout
        android:id="@+id/mainDrawLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/allViewBtn"
                        android:layout_gravity="left"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/align_icon"/>
                    <ImageView
                        android:id="@+id/homeBtn"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher_round"/>
                    <ImageView
                        android:padding="4dp"
                        android:id="@+id/loginBtn"
                        android:layout_gravity="right"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/login_icon"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_line"/>
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/noticeBtn"
                        android:tag="0"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="공지사항"
                        android:textStyle="bold"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/memberBtn"
                        android:tag="1"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="맴버"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/galleryBtn"
                        android:tag="2"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="갤러리"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/videoBtn"
                        android:tag="3"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="동영상"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/scheduleBtn"
                        android:tag="4"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="스케줄"/>
                    <TextView
                        android:padding="5dp"
                        android:id="@+id/qaBtn"
                        android:tag="5"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Q\u0026A"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_line"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/noticeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <fragment
                            android:id="@+id/noticeFrag"
                            class="com.sy_studio.the.gugudan_SangYeol.Fragment.NoticeFrag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/frag_notice"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/memberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">
                        <fragment
                            android:id="@+id/memberFrag"
                            class="com.sy_studio.the.gugudan_SangYeol.Fragment.MemberFrag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/frag_member"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/galleryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">
                        <fragment
                            android:id="@+id/galleryFrag"
                            class="com.sy_studio.the.gugudan_SangYeol.Fragment.GalleryFrag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/frag_gallery"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/videoLayout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <fragment
                            android:id="@+id/videoFrag"
                            class="com.sy_studio.the.gugudan_SangYeol.Fragment.VideoFrag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/frag_video"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/scheduleLayout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <fragment
                            android:id="@+id/scheduleFrag"
                            class="com.sy_studio.the.gugudan_SangYeol.Fragment.ScheduleFrag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/frag_scheduel"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/qaFragLayout"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <fragment
                            android:id="@+id/qAFrag"
                            class="com.sy_studio.the.gugudan_SangYeol.Fragment.QAFrag"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/frag_qa"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <android.support.design.widget.NavigationView
            android:id="@+id/naviView"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:id="@+id/naviLaytout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/naviFragment"
                    class="com.sy_studio.the.gugudan_SangYeol.Fragment.NavigationFrag"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/frag_navigation" />
            </LinearLayout>

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>





</LinearLayout>
